@page "/GenericTypedRenderFragment"
<h1>Generic Typed Render Fragment</h1>
<br />
<br />

<AutoGridComponent Items="employees"
                   ColumnsToExcludeCSV="Id , Dep"
                   ></AutoGridComponent>

@code
{ 
    private List<Employee> employees;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        employees = new List<Employee>();
        employees.AddRange(new Employee[3] {
            new Employee{ Id = 1 , Name = "Jhon Doe" , Title = "Developer" , Dep="Dev" },
            new Employee{ Id = 2 , Name = "Jane Doe" , Title = "Developer" , Dep="Dev" },
            new Employee{ Id = 3 , Name = "Jeff Thomason" , Title = "Developer" , Dep="Dev" },
        });
    }

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Title { get; set; }
        public string Dep { get; set; }
    }
}
