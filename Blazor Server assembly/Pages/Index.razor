@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.
<br />

<p>
    Name : @person.SalesPerson
</p>
<p>
    Amount : @person.Amount.ToString("c")
</p> 
<p>
    <input type="number" @bind-value="person.Amount"
           @bind-value:event="oninput" /> 
</p>
<p>
    <label>
        <input type="checkbox"
               @bind-value="person.isActive" />
        Is Active
        &nbsp;
        @person.isActive
    </label>
   
</p>

@code{

    IndexViewModel person = null;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        person = new IndexViewModel
        {
            SalesPerson = "Shahzaib",
            Amount = 1000,
            locations = new List<Location>
            {
                new Location{Id=1 , ProvState = "Sindh" , Country = "Karachi"},
                new Location{Id=1 , ProvState = "Punjib" , Country = "Lahore"}

            }
        };
    }

    #region ViewModel

    class IndexViewModel
    {
        public string SalesPerson { get; set; }
        public int Amount { get; set; }
        public bool isActive { get; set; }
        public List<Location> locations { get; set; }

    }

    class Location
    {
        public int Id { get; set; }
        public string City { get; set; }
        public string ProvState { get; set; }
        public string Country { get; set; }

    }

    #endregion
}
