@page "/teams"
<h3 style="color:@Color">Teams</h3>
<table class="table">
    <tr>
        <th>Teams</th>
        <th>Region</th>
    </tr>

    @foreach (var teams in teams)
    {
<tr>
    @*<td> <a href="/team" class="nav-link">teams.Name</a> </td>*@
    @*with route paramater also add a parametr in team in the page *@
    <td> <a href=@($"/team/{teams.Id}") class="nav-link">@teams.Name</a> </td>
    <td> teams.Region </td>
</tr>
    }
</table>
<br />
<label>Select the color for table</label>
<input type="text" @bind-value="Color" />
@code {
    [CascadingParameter(Name = "Color")]
    public string Color { get; set; }

    private List<Team> teams;
    //private IEnumerable<Team> teams;
    protected override void OnInitialized()
    {
        base.OnInitialized();

        teams = new List<Team>();
        teams.Add(new Team { Id = 1, Name = "Red", Region = "Region One" });
        teams.Add(new Team { Id = 2, Name = "Blue", Region = "Region Two" });
        teams.Add(new Team { Id = 3, Name = "Yellow", Region = "Region Three" });

    }
    public class Team
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Region { get; set; }
    }
}