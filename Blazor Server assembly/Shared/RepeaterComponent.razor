@code {
    //add render fragment without the generic type
    [Parameter]
    public RenderFragment Header { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }


    [Parameter]
    public RenderFragment<TItem> Row { get; set; }



    [Parameter]
    public List<TItem> Items { get; set; }

    //to create an edit form template
    //declare a param without a list

    //[Parameter] Componennt Parameter should not  be outside its component
    public TItem ItemToEdit { get; set; }
    [Parameter]
    public RenderFragment<TItem> EditTemplate { get; set; }


}
