@typeparam TItem

@Header
@foreach (var item in Items)
{
    //use it like a function , we are telling the
    //row template that this is the Item we are
    //dealing with right now
    @Row(item)  ;
}
@Footer

@if (this.ItemToEdit != null)
{
    @EditTemplate(ItemToEdit)
}

